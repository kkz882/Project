<!DOCTYPE html>
<html>
<head>
    <title>Edit Drug</title>
</head>
<body>
<h>Edit Drug</h2>

<form action="/drugs/update/<%= drug._id %>" method="POST">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= drug.name %>" required>
    </div>
    <div>
        <label for="dosage">Dosage:</label>
        <input type="text" id="dosage" name="dosage" value="<%= drug.dosage %>" required>
    </div>
    <div>
        <label for="manufacturer">Manufacturer:</label>
        <input type="text" id="manufacturer" name="manufacturer" value="<%= drug.manufacturer %>" required>
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= drug.description %></textarea>
    </div>
    <div>
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" value="<%= drug.category %>">
    </div>
    <div>
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" value="<%= drug.stock %>" required>
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="0.01" value="<%= drug.price %>" required>
    </div>
    <div>
        <label for="expiryDate">Expiry Date:</label>
        <input type="date" id="expiryDate" name="expiryDate" value="<%= drug.expiryDate ? drug.expiryDate.toISOString().substr(0, 10) : '' %>" required>
    </div>
    <button type="submit">Update Drug</button>
</form>
</body>
</html>